<AddIn
	id          = "MonoDevelop.CTagsCompletion"
	name        = "CTagsCompletion"
	author      = "Marcos David Marin Amador"
	copright    = "MIT X11"
	url         = "http://www.monodevelop.com"
	description = "Creates and parses exuberant ctags tag files"
	version     = "0.1">
	
	<Runtime>
		<Import assembly = "CTagsCompletion.dll"/>
	</Runtime>
	
	<Dependencies>
		<AddIn id = "MonoDevelop.Core" version = "0.14.0"/>
		<AddIn id = "MonoDevelop.Projects" version = "0.14.0"/>
	</Dependencies>
	
	<Extension path = "/SharpDevelop/Workbench/ProjectServiceExtensions">
		<Class id = "CreateTags" class = "CTagsCompletion.CTagsProjectServiceExtension"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Commands">
		<Command
			id = "CTagsCompletion.TagsCommands.Complete"
	    	defaultHandler = "CTagsCompletion.CTagsCompleteCommandHandler"
	    	shortcut = "Control|space"
	    	description = "Attempt to complete the current line of code"
	    	icon = "res:complete"
	    	_label = "Complete"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/MainMenu/Edit">
		<CommandItem id = "CTagsCompletion.TagsCommands.Complete" insertafter = "Separator2"/>
		<SeparatorItem id = "CompleteSeparator" />
	</Extension>
</AddIn>