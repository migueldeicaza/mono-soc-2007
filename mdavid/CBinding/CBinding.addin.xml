<AddIn
	id          = "MonoDevelop.CBinding"
	name        = "C/C++ Language Binding"
	author      = "Marcos David Marin Amador"
	copright    = "MIT X11"
	url         = "http://www.monodevelop.com"
	description = "C/C++ Language binding"
	category    = "Language bindings"
	version     = "0.1">

	<Runtime>
		<Import assembly = "CBinding.dll"/>
	</Runtime>
	
	<Dependencies>
		<AddIn id = "MonoDevelop.Core" version = "0.13.0"/>
		<AddIn id = "MonoDevelop.Core.Gui" version = "0.13.0"/>
		<AddIn id = "MonoDevelop.Ide" version = "0.13.0"/>
		<AddIn id = "MonoDevelop.Projects" version = "0.13.0"/>
		<AddIn id = "MonoDevelop.Projects.Gui" version = "0.13.0"/>
	</Dependencies>

	<Extension path = "/SharpDevelop/Workbench/FileFilter">
		<FileFilter
			id = "C"
			insertbefore = "AllFiles"
			_label = "C/C++ Files"
			extensions = "*.c,*.cpp,*.h,*.hpp"/>
	</Extension>

	<Extension path = "/MonoDevelop/FileTemplates">
		<FileTemplate id = "EmptyCFile" resource = "EmptyCFile.xft.xml"/>
	</Extension>

	<Extension path = "/MonoDevelop/ProjectTemplates">
		<ProjectTemplate id = "EmptyCProject" resource = "EmptyCProject.xpt.xml"/>
		<ProjectTemplate id = "EmptyCppProject" resource = "EmptyCppProject.xpt.xml"/>
	</Extension>
	
	<Extension path = "/Workspace/Icons">
		<Icon
			id = "CPrj"
			language = "C"
			resource = "res:C.Project.Empty"/>
    	<Icon
    		id = "CFile"
			extensions = ".c"
			resource = "res:C.File.Empty"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/ProjectBindings">
		<ProjectBinding id = "CProject" class = "CBinding.CProjectBinding"/>
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/ProjectOptions/ConfigurationProperties">
		<Condition id = "activelanguage" value = "C">
			<DialogPanel
				id = "CodeGenerationPanel"
			    _label = "Code Generation"
			    class = "CBinding.CodeGenerationPanelBinding"/>
		</Condition>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/ProjectOptions/GeneralOptions/Common">
		<Condition id = "activelanguage" value = "C">
			<DialogPanel
				id = "CompilerPanel"
			    _label = "Compiler"
			    insertafter = "Compile"
			    class = "CBinding.CompilerPanelBinding"/>
		</Condition>
	</Extension>
	
	<ExtensionPoint path = "/CBinding/Views/ProjectBrowser/ContextMenu/PackagesFolderNode" name = "Packages folder context menu">
		<Description>Context menu for packages folder in the solution pad.</Description>
		<ExtensionNodeSet id = "MonoDevelop.Core.Gui.ItemSet"/>
	</ExtensionPoint>
	
	<Extension path = "/SharpDevelop/Workbench/Pads/MonoDevelop.Ide.Gui.Pads.ProjectPad">
	<!-- Condition not working (It's never true) -->
		<!--<Condition id = "activelanguage" value = "C">-->
			<NodeBuilder id = "ProjectReferencesExtension" class = "CBinding.ProjectReferencesExtension"/>
			<NodeBuilder id = "ProjectNodeExtension" class = "CBinding.ProjectNodeExtension"/>
			<NodeBuilder id = "ProjectPackagesFolderNodeBuilder" class = "CBinding.ProjectPackagesFolderNodeBuilder"/>
		<!--</Condition>-->
	</Extension>
	
	<Extension path = "/SharpDevelop/Commands">
		<Command id = "CBinding.CProjectCommands.AddPackage" _label = "Edit Packages..."/>
	</Extension>
	
	<Extension path = "/CBinding/Views/ProjectBrowser/ContextMenu/PackagesFolderNode">
		<!--<CommandItem id = "CBinding.CProjectCommands.AddPackage"/> This throws and exception-->
		<CommandItem id = "MonoDevelop.Ide.Commands.EditCommands.Paste"/> <!-- And this just doesn't appear -->
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/SerializableClasses">
		<DataType class = "CBinding.CCompilationParameters"/>
		<DataType class = "CBinding.CProjectConfiguration"/>
		<DataType class = "CBinding.CProject"/>
		<DataType class = "CBinding.GccCompiler"/>
		<DataType class = "CBinding.GppCompiler"/>
	</Extension>
	
</AddIn>