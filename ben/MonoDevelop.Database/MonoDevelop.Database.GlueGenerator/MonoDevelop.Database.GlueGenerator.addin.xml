<Addin	id		= "Database.GlueGenerator"
	namespace	= "MonoDevelop"
	name		= "MonoDevelop Database GlueGenerator"
	author		= "Ben Motmans"
	copyright	= "MIT X11"
	url		= "http://www.monodevelop.com"
	description	= "Database glue generator module."
	version		= "0.14.0">
    
	<Runtime>
		<Import assembly="MonoDevelop.Database.GlueGenerator.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Core" version="0.14.0"/>
		<Addin id="Core.Gui" version="0.14.0"/>
		<Addin id="Ide" version="0.14.0"/>
		<Addin id="Mono.Data.Sql" version="0.14.0"/>
		<Addin id="Database.Query" version="0.14.0"/>
	</Dependencies>
	
	<Extension path = "/SharpDevelop/Commands">
		<Command id = "MonoDevelop.Database.GlueGenerator.ToolCommands.GenerateDatabaseLayer"
			defaultHandler = "MonoDevelop.Database.GlueGenerator.GenerateDatabaseLayerHandler"
			_label = "Generate Custom Database Layer"
			icon = "md-db-database"/>
		<Command id = "MonoDevelop.Database.GlueGenerator.ToolCommands.GenerateDataObjects"
			defaultHandler = "MonoDevelop.Database.GlueGenerator.GenerateDataObjectsHandler"
			_label = "Generate Data Objects"
			icon = "md-db-database"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/MainMenu/Tools/Database">
		<SeparatorItem id = "GenerateSeparator" />
		<ItemSet id = "DatabaseLayer" _label = "Generate Database Layer">
			<CommandItem id = "MonoDevelop.Database.GlueGenerator.ToolCommands.GenerateDatabaseLayer" />
		</ItemSet>
		<CommandItem id = "MonoDevelop.Database.GlueGenerator.ToolCommands.GenerateDataObjects" />
	</Extension>

</Addin>