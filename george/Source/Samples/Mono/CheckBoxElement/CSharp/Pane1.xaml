 
<StackPanel  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Checkbox2.Pane1"
    Height="900"
	xmlns:mono_sytem_windows_controls="clr-namespace:Mono.System.Windows.Controls;assembly=Mono.PresentationFramework"    >

<Grid ShowGridLines ="false" Background ="White">
<Grid.ColumnDefinitions>
<ColumnDefinition Width="300px"/>
<ColumnDefinition Width="250px"/>
</Grid.ColumnDefinitions>
<Grid.RowDefinitions>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
<RowDefinition/>
</Grid.RowDefinitions>
<TextBlock Margin="10, 10, 3, 3" Grid.Column="0" Grid.Row="0" FontSize="20">Check Boxes</TextBlock>
<TextBlock Margin="10, 10, 3, 3" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="14">The following 
      check box examples demonstrate:</TextBlock>
	<mono_sytem_windows_controls:CheckBox Margin="10, 10, 3, 3" Grid.Column="0" Grid.Row="2" Name="cb1" FontSize="12" 
Checked="HandleChange">Check Box</mono_sytem_windows_controls:CheckBox>
<TextBlock Margin="10, 10, 3, 3" Grid.Column="1" Grid.Row="2" FontSize="12" VerticalAlignment="Center" 
      TextWrapping="WrapWithOverflow">Single check box. Clicking the box toggles its state from checked 
      to unchecked.
</TextBlock>
<DockPanel Margin="10, 10, 3, 3" Grid.Column="0" Grid.Row="3" Grid.RowSpan="2">
	<mono_sytem_windows_controls:CheckBox Name="cb2" FontSize="12" DockPanel.Dock="Top">Yes</mono_sytem_windows_controls:CheckBox>
	<mono_sytem_windows_controls:CheckBox Name="cb3" FontSize="12" DockPanel.Dock="Top">No</mono_sytem_windows_controls:CheckBox>
	<mono_sytem_windows_controls:CheckBox Name="cb4" FontSize="12" DockPanel.Dock="Top">Maybe</mono_sytem_windows_controls:CheckBox>
<mono_sytem_windows_controls:CheckBox Name="cb5" FontSize="12" DockPanel.Dock="Top">I have no opinion.</mono_sytem_windows_controls:CheckBox>  
</DockPanel>
<TextBlock Margin="10, 10, 3, 3" Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" FontSize="12" 
      VerticalAlignment="Center" TextWrapping="WrapWithOverflow">Group of check boxes. You may choose as 
      many items as you wish in a group of check boxes.
</TextBlock> 
<DockPanel Margin="10, 10, 3, 3" Grid.Column="0" Grid.Row="5">
	<mono_sytem_windows_controls:CheckBox Name="cb6" Checked="HandleChange1"><Image Source="data\flower.jpg" Height="30" Width="30"/>
</mono_sytem_windows_controls:CheckBox>
<TextBlock Name="txt" VerticalAlignment="Center">Click the check box.</TextBlock>
</DockPanel>
<TextBlock Margin="10, 10, 3, 3" Grid.Column="1" Grid.Row="5" Name="txt2" FontSize="12" 
     VerticalAlignment="Center" TextWrapping="WrapWithOverflow">Check box with an image.
</TextBlock>
	<mono_sytem_windows_controls:CheckBox  Name="cb7" Checked="HandleChange2" Margin="10, 10, 3, 3" Grid.Column="0" Grid.Row="6" FontSize="12">
<DockPanel>
    <Image Source="data\flower.jpg" Height="30" Width="30"/>
    <TextBlock Name="txt3" VerticalAlignment="Center">Click the check box.</TextBlock>
</DockPanel>
</mono_sytem_windows_controls:CheckBox>
<TextBlock Margin="10, 10, 3, 3" Grid.Column="1" Grid.Row="6" FontSize="12" VerticalAlignment="Center" 
      TextWrapping="WrapWithOverflow">Check box with complex content, the check box contains a DockPanel 
      with an image and some text.
</TextBlock> 
</Grid>
 
</StackPanel>
